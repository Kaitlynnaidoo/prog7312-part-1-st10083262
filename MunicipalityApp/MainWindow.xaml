<Window x:Class="MunicipalityApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Municipal Services" Height="300" Width="400" Background="#FFEDF7FF">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Welcome to Municipal Services" FontSize="20" FontWeight="Bold" Foreground="#064E40" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Button Content="Report Issues" Width="250" Height="50" Click="ReportIssues_Click" Background="#008080" Foreground="White" FontSize="14" Margin="0,10,0,10"/>
            <Button Content="Local Events and Announcements" Width="250" Height="50" IsEnabled="False" Background="#D3D3D3" Foreground="White" FontSize="14"/>
            <Button Content="Service Request Status" Width="250" Height="50" IsEnabled="False" Background="#D3D3D3" Foreground="White" FontSize="14" Margin="0,10,0,10"/>
        </StackPanel>
    </Grid>
</Window>
